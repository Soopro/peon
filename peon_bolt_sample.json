{
  "watch":{
    "src": "src",
    "dest": "build",
    "skip_includes":[],
    "init": true,
    "server": true,
    "port": 9527
  },
  "init":{
    "copy": {
      "libs":{
        "flatten": true,
        "src":[
          "angular/angular.js",
          "angular-cookies/angular-cookies.js",
          "angular-resource/angular-resource.js",
          "angular-animate/angular-animate.js",
          "angular-messages/angular-messages.js",
          "angular-aria/angular-aria.js",
          "angular-material/angular-material.js",
          "angular-route/angular-route.js",
          "angular-sanitize/angular-sanitize.js",
          "ng-file-upload/ng-file-upload.js",
          "ng-file-upload/ng-file-upload-shim.js",
          "angular-drag-and-drop-lists/angular-drag-and-drop-lists.js"
        ],
        "cwd":"bower_components",
        "dest":"/src/scripts/libs/"
      },
      "css":{
        "flatten": true,
        "src":[
          "angular-material/angular-material.css"
        ],
        "cwd":"bower_components",
        "dest":"/src/styles/"
      }
    }
  },
  "build":{
    "clean": "build",
    "render":{
      "cwd": "src",
      "dest": "build"
    }
  },
  "release":[
    {
      "clean": "dist",
      "copy":{
        "dist":{
          "src": [
            "**/*",
            "!**/_*",
            "!_*"
          ],
          "cwd": "build",
          "dest": "dist"
        },
        "assets":{
          "flatten": true,
          "src": [
            "**/*.ttf",
            "**/*.woff*",
            "**/*.png",
            "**/*.jpg",
            "**/*.svg"
          ],
          "cwd": "build",
          "dest": "dist"
        }
        
      },
      "compress": {
        "inline_angular_templates":{
          "type": "inline_angular_templates",
          "src": [
            "blueprints/**/*.html",
            "modals/**/*.html",
            "!**/_*.html"
          ],
          "cwd": "dist",
          "prefix": "",
          "beautify": false,
          "allow_includes": false,
          "output":"index.html"
        },
        "process_html":{
          "type": "process_html",
          "cwd": "dist",
          "src": "*.html"
        },
        "html":{
          "type": "html",
          "cwd": "dist",
          "src": "*.html"
        }
      },
      "replace": {
        "src": "*.min.*",
        "cwd": "dist",
        "replacements": [
          {
            "pattern": "/styles/icons/svg",
            "replace": "svg"
          },
          {
            "pattern": "icons/ico",
            "replace": "ico"
          }
        ]
      },
      "scrap": {
        "src":[
          "*",
          "!*.html",
          "!*.min.*",
          "!*.png",
          "!*.jpg",
          "!*.svg",
          "!*.ttf",
          "!*.woff*"
        ],
        "cwd":"dist"
      },
      "rev":{
        "src":"*.html",
        "cwd":"dist",
        "find":"?md5=null",
        "pattern":"null"
      }
    }
  ]
}